{
  "name": "passorcrash",
  "displayName": "PassOrCrash",
  "description": "Adds audio feedback in VS Code when your test cases pass or fail.",
  "version": "0.0.1",
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/chandubadrinathmanikanta/passorcrash.git"
  },
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": ["Other"],
  "activationEvents": ["onCommand:passorcrash.run"],
  "contributes": {
    "commands": [
      {
        "command": "passorcrash.run",
        "title": "Run PassOrCrash"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "play-sound": "^1.1.6"
  }
}